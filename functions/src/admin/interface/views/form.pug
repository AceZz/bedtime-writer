doctype html
html
  head
    title= `Form ID: ${selectedFormId}`
    link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap' rel='stylesheet')
    style.
      body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }
      .container {
        text-align: left;
      }
      h1, h2, p {
        margin-bottom: 20px;
      }
      img {
        max-width: 100%;
        height: auto;
      }
      a, button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        width: 100px;
        text-align: center;  // center the text
      }
      a {
        background-color: #a9a9a9;  // darker gray
      }
      button {
        background-color: #28a745;
        border: none;
        cursor: pointer;
      }
  body
    .container
      h1= `formId: ${selectedFormId}`
      h2= `Number stories: ${numStories}`
      if image
        h2= `Image: ${uiIndex} / ${maxUiIndex}`
        p= `storyId: ${storyId}`
        p= `imageID: ${imageId}`
        p= `status: ${image.status}`
        p= `isApproved: ${image.isApproved}`
        img(src=`data:image/png;base64,${image.imageB64}`)
      if nextImageId
        a(href=`/form?formId=${selectedFormId}&storyId=${nextStoryId}&imageId=${nextImageId}`) Next
        button(id="approveButton") Approve
        script.
          const imageId = !{JSON.stringify(imageId)};
          document.getElementById('approveButton').addEventListener('click', async () => {
            const storyId = storyId;
            const imageId = imageId;
            const response = await fetch('/approve-image', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({ storyId, imageId })
            });
            const result = await response.json();
            console.log('Server response:', result);
            location.reload();
          });
