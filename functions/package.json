{
  "name": "functions",
  "description": "Backend for bedtime-writer",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "lint": "npx prettier --write src test",
    "test": "npx jest",
    "lint_check": "npx prettier --check src test",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "local_backend": "firebase emulators:start",
    "lbd": "firebase emulators:start --import=local_backend_export",
    "deploy_functions_dev": "firebase deploy --only functions --project bedtime-writer-dev",
    "deploy_functions_prod": "firebase deploy --only functions --project bedtime-writer",
    "deploy_hosting_dev": "firebase hosting:channel:deploy preview --expires 7d",
    "story_set_questions": "node lib/src/admin/story_set_questions",
    "story_add_form": "node lib/src/admin/story_add_form.js",
    "story_compress_images": "node lib/src/admin/story_compress_images.js",
    "story_generate_cache": "node lib/src/admin/story_generate_cache.js"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "@types/node": "^18.15.11",
    "ajv": "^8.12.0",
    "dotenv": "^16.1.4",
    "firebase-admin": "^11.9.0",
    "firebase-functions": "^4.4",
    "openai": "^3.1.0",
    "sharp": "^0.32.0",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "firebase-functions-test": "^0.2",
    "jest": "^29.5.0",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "private": true
}
